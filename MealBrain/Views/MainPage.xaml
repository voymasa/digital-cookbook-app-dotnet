<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:MealBrain.Views.Components"
             x:Class="MealBrain.Views.MainPage">
    <ScrollView>

		<VerticalStackLayout Padding="20" Spacing="40">

			<!-- Top Section: Grid with two equal columns -->
			<Grid ColumnDefinitions="*,1,*"
				  HeightRequest="500"
				  VerticalOptions="Center"
				  HorizontalOptions="FillAndExpand">


				<!-- Left Column: Meal Brain Logo -->
				<VerticalStackLayout Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center">
					<Label Text="MealBrain"
						   FontSize="50"
						   FontAttributes="Bold"
						   TextColor= "#AC99EA"
						   HorizontalOptions="Center"
						   Margin="0,10,0,0"/>
					<Image Source="mealbrainlogo.png"
						   WidthRequest="450"
						   HeightRequest="450"
						   Aspect="AspectFit" />
				</VerticalStackLayout>

                <BoxView Grid.Column="1"
					 WidthRequest="1"
					 BackgroundColor="Gray"
					 VerticalOptions="Center"
					 HeightRequest="400" />

                <!-- Right Column: User Account Selection -->
                <VerticalStackLayout Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center" Spacing="20">

					<Label
						Text="Select your account."
						Style="{StaticResource SubHeadline}"
						FontSize="18"
						HorizontalOptions="Center" />

                    <ScrollView>
                        <FlexLayout BindableLayout.ItemsSource="{Binding Accounts}"
                                    Direction="Row"
                                    Wrap="Wrap"
                                    JustifyContent="Center"
                                    AlignItems="Center"
                                    AlignContent="Center">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <views:AccountCardView Margin="10"/>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </FlexLayout>
                    </ScrollView>
                </VerticalStackLayout>
			</Grid>

			<!-- Bottom Section: Grid with two equal columns -->
			<Grid ColumnDefinitions="*,*"
				  HeightRequest="100"
				  VerticalOptions="Center"
				  HorizontalOptions="FillAndExpand">

                <!-- Exit Button -->
				<VerticalStackLayout Grid.Column="0" HorizontalOptions="Center" Spacing="20" Margin="0,40,0,0">
					<Button Text="Exit Application" Command="{Binding ExitCommand}"/> 
				</VerticalStackLayout>
                
                <!-- Sign Up Button -->
				<VerticalStackLayout Grid.Column="1" HorizontalOptions="Center" Spacing="20" Margin="0,40,0,0">
					<Button Text="+" Command="{Binding SignupCommand}"/>
				</VerticalStackLayout>
			</Grid>
		</VerticalStackLayout>
    </ScrollView>
</ContentPage>